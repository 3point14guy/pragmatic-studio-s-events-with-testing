<!-- while possible, this doesn't look great -->
  <!-- <%#= @event.errors.full_messages.to_sentence %> -->
  <!-- so, instead... -->
   <!-- object is a local variable set in the form that this partial will be rendered in, that way the same error handling can be used for multiple forms %> -->
<% if object.errors.any? %>
  <section id="errors">
    <header>
      <h2>
        Your form could not be saved.
      </h2>
      <h3>
        Please correct the following
        <%= pluralize(object.errors.count, "error") %>:
      </h3>
    </header>
    <ul>
      <% object.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
