<!-- while possible, this doesn't look great -->
  <!-- <%#= @event.errors.full_messages.to_sentence %> -->
  <!-- so, instead... -->
<% if @event.errors.any? %>
  <section id="errors">
    <header>
      <h2>
        Your form could not be saved.
      </h2>
      <h3>
        Please correct the following
        <%= pluralize(@event.errors.count, "error") %>:
      </h3>
    </header>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
